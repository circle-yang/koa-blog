{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "alwaysStrict":true,
        "declaration":true,
        "experimentalDecorators":true,
        "forceConsistentCasingInFileNames":true,
        "importHelpers":true,
        "baseUrl": ".",
        "isolatedModules":true,
        "jsx":"preserve",
        "jsxFactory":"React.createElement",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },

    },
    "include": [
        "src/**/*"
    ]
}